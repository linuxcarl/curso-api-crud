{
  "name": "curso-api-crud",
  "version": "1.0.0",
  "description": "Curso de un crud con nodejs",
  "main": "app.js",
  "scripts": {
    "tsc": "tsc",
    "dev": "npm run lint && ts-node-dev --respawn --transpile-only ./src/api/app.ts",
    "lint": "eslint '*/**/*.ts' --quiet --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/linuxcarl/curso-api-crud.git"
  },
  "keywords": [
    "crud",
    "nodejs",
    "typescript"
  ],
  "author": "Carlos Enrique Ram√≠rez Flores",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/linuxcarl/curso-api-crud/issues"
  },
  "homepage": "https://github.com/linuxcarl/curso-api-crud#readme",
  "devDependencies": {
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.8",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "eslint": "^7.10.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "ts-node-dev": "^1.0.0-pre.63",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  }
}
